<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="20dp"
        android:layout_gravity="right"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_close_black_24dp"
        android:background="@drawable/close_dialog_bg"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result of" />
        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/tvEmpName"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="12dp"
            android:textColor="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Score:" />

        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/tvScore"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="50dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/tvResult"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="30dp"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
        <ProgressBar
            android:id="@+id/progressResult"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="KPI" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Nilai" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Bobot" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Hasil" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvResultKPI"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:nestedScrollingEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:text="KPI" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:text="Nilai" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Total KPI" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:id="@+id/tvTotalKPI"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Kualitatif" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Nilai" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Bobot" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Hasil" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvResultKualitatif"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:nestedScrollingEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:text="KPI" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="Total " />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Kualitatif" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:id="@+id/tvTotalKualitatif"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

