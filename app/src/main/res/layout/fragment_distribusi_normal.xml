<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="100dp"
    tools:context=".Fragment.KPITahunanFragment.FinalPAFragments.DistribusiNormalFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_gravity="center"
                android:id="@+id/btnApproveDN"
                android:layout_width="90dp"
                android:layout_marginTop="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/shapegreen"
                android:shadowColor="@color/white"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Approve"
                android:textColor="@color/white"
                android:layout_marginBottom="0dp"
                android:textSize="14sp" />
            <Button
                android:layout_gravity="center"
                android:id="@+id/btnEditDN"
                android:layout_width="90dp"
                android:layout_marginTop="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shapegreen"
                android:shadowColor="@color/white"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Edit DN"
                android:textColor="@color/white"
                android:layout_marginBottom="0dp"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/btnListAppr"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/mail_icon"
                    android:scaleType="fitCenter"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerDN"
                android:visibility="visible"
                android:layout_margin="15dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:background="@drawable/shapetextarea"
                tools:ms_dropdown_max_height="150dp"
                tools:ms_dropdown_height="150dp"
                tools:ms_dropdown_width="wrap_content"
                android:textSize="16dp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="center"
                android:id="@+id/btnProcessDN"
                android:layout_width="90dp"
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shapegreen"
                android:shadowColor="@color/white"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Process"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:paddingTop="15dp"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/btnReject"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/mail_icon"
                    android:scaleType="fitCenter"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/lnDNGraph"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="Tabel &amp; Grafik Perhitungan PA" />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Standar Deviasi &amp; Mean" />
                <TextView
                    android:id="@+id/tvStandarDeviasi"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Standar Deviasi:" />
                <TextView
                    android:id="@+id/tvMean"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Mean: " />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/lnDNGraphTable"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="Star" />
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="N" />
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="RANGE" />
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="BA" />
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="JML" />
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="%" />
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="JML(2)" />
                    <TextView
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="%(2)" />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDNGraphTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_height="250dp">
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <WebView
                android:visibility="gone"
                android:id="@+id/wbChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnSort"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mail_icon"
                android:scaleType="fitCenter"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:passwordToggleContentDescription="erwerwer"
                tools:passwordToggleDrawable="@drawable/ic_home_black_24dp"
                tools:passwordToggleEnabled="true"
                android:textColor="@color/EditTextColor"
                android:textColorHint="@color/EditTextColor"
                android:layout_margin="0dp"
                android:textColorHighlight="@color/EditTextColor"
                tools:passwordToggleTint="@color/EditTextColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSearch"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:background="@drawable/shape_green_border"
                    android:drawableLeft="@drawable/ic_search_icon_24dp"
                    android:drawablePadding="10dp"
                    android:text=""
                    android:singleLine="true"
                    android:hint="Find"
                    android:textColor="@color/EditTextColor"
                    android:textColorHint="@color/EditTextColor"
                    android:textColorHighlight="@color/EditTextColor"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btnImport"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mail_icon"
                android:scaleType="fitCenter"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/lnDNEmp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_marginBottom="60dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_height="wrap_content"
                    android:text=" Score " />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="Dist. Normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="Hasil Adjustment" />
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDNEmp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>

