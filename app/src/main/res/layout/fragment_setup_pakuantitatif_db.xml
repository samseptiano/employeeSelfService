<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.KPITahunanFragment.SetupPA.SetupPAKuantitatifDBFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinnerSetup"
            android:visibility="visible"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:background="@drawable/shapetextarea"
            app:ms_dropdown_max_height="150dp"
            app:ms_dropdown_height="150dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shapegreen"
            android:text="Save" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/white"
        android:id="@+id/rv_setup_employee"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lnSetupPosition"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:textSize="11sp"
                android:background="@drawable/shapegreen"
                android:text="+Add" />
            <Button
                android:id="@+id/btnImport"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:textSize="11sp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shapegreen"
                android:text="Import" />
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:textSize="11sp"
                android:background="@drawable/shapetextarea"
                android:text="Delete" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_templateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAlignment="center"
            android:text="Template"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAlignment="center"
            android:text="Year"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_Deploy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAlignment="center"
            android:text="Deploy"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="12sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="5dp"
        android:background="#000" />
    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/white"
        android:id="@+id/rv_setup_position"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"/>
    </LinearLayout>
</LinearLayout>