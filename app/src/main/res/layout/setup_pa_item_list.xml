<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/HrLine2"
            android:layout_width="278dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@color/black" />
        <TextView
            android:id="@+id/tvKPICategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="12dp"
            android:gravity="center"
            android:textStyle="italic"
            android:text="Faktor Kualitatif" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnSetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/shapelogin"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/cbSetupPa"
            android:layout_width="wrap_content"
            android:background="#ebebeb"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/EditTextColor"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:text="" />
        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/EditTextColor"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:background="#ebebeb"
            android:text="1. " />
        <TextView
            android:visibility="visible"
            android:id="@+id/tvSetupKPI"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/EditTextColor"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:textColor="#000"
            android:background="#ebebeb"
            android:text="Customer Focus" />
        <TextView
            android:visibility="visible"
            android:id="@+id/tvSetupBobot"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/EditTextColor"
            android:textColor="#000"
            android:background="#ebebeb"
            android:text="15%" />
    </LinearLayout>
</LinearLayout>