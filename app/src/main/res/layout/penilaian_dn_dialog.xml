<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
    xmlns:apps="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/dialog_bg">
    <LinearLayout
        android:id="@+id/lnForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="20dp"
            android:layout_gravity="right"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/close_dialog_bg"
            />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Penilaian"
            android:textColor="#000"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Distribusi Normal"
                android:textColor="#000"
                android:textSize="14dp"
                 />
        </LinearLayout>


        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/ratingBarDN"
            android:theme="@style/RatingDN"
            android:numStars="5"
            android:isIndicator="true"
            android:layout_margin="10dp"
            android:progressTint="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="Distribusi Normal Adjustment"
                android:textColor="#000"
                android:textSize="14dp" />
        </LinearLayout>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/ratingBarAdjustment"
            android:theme="@style/RatingDN"
            android:numStars="5"
            android:stepSize="1"
            android:layout_margin="10dp"
            android:progressTint="@color/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edtPenilaian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|left"
            android:background="@drawable/shapetextarea"
            android:maxLines="10"
            android:hint="ketik alasan untuk adjustment penilaian yang anda berikan.."
            android:maxLength="1000"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            android:padding="10dp"
            android:textSize="14dp"
            android:textStyle="italic"
            android:scrollbars="vertical"/>
    </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_below="@id/lnForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:layout_gravity="center"
                android:id="@+id/btnCancel"
                android:layout_width="90dp"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="10dp"
                android:background="@color/zxing_transparent"
                android:shadowColor="@color/white"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Cancel"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"
                android:textSize="14sp" />

            <Button
                android:layout_gravity="center"
                android:id="@+id/btnProcessDN"
                android:layout_width="90dp"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shapegreen"
                android:shadowColor="@color/white"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Save"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:textSize="14sp" />
        </LinearLayout>
</RelativeLayout>
</ScrollView>