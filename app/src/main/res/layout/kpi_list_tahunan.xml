<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lnKPICategory"
    android:layout_marginBottom="10dp"
    android:layout_gravity="center">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/HrLine2"
            android:layout_width="278dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/white" />
        <TextView
            android:id="@+id/tvKPICategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:textSize="16dp"
            android:gravity="center"
            android:textStyle="italic"
            android:text="Faktor Kualitatif" />
    </LinearLayout>
    <View
        android:id="@+id/HrLine"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/common_google_signin_btn_text_dark_focused" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvPerspective"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        android:background="@color/colorAccent"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/lnPAItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tvNumber"
        android:layout_marginTop="10dp"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="99."
        android:textStyle="bold"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="12sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        app:cardBackgroundColor="#2DB8A3"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:animateLayoutChanges="true"
                android:id="@+id/linear_layout_container2"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lnKPIName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_layout_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <requestFocus />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:paddingRight="15dp"
                                    android:visibility="gone">

                                    <ImageButton
                                        android:id="@+id/imgExpand"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:backgroundTint="@color/zxing_transparent"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/expand_down" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="5"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvKPIDesc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingRight="10dp"
                                    android:text="Lorem Imsum dolor sit ametLorem Imsum dolor sit amet"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:gravity="right"
                                        android:orientation="horizontal">

                                        <ImageButton
                                            android:id="@+id/imgBtnUpload"
                                            android:layout_width="30dp"
                                            android:layout_height="20dp"
                                            android:layout_centerHorizontal="true"
                                            android:layout_gravity="right"

                                            android:layout_marginTop="0dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="0dp"
                                            android:background="@color/zxing_transparent"
                                            android:padding="0dp"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/document_icon" />

                                        <ImageButton
                                            android:id="@+id/imgBtnHint"
                                            android:layout_width="30dp"
                                            android:layout_height="20dp"
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            android:layout_gravity="right"
                                            android:layout_marginLeft="0dp"
                                            android:layout_marginTop="0dp"
                                            android:layout_marginRight="5dp"
                                            android:background="@color/zxing_transparent"
                                            android:padding="1dp"
                                            android:scaleType="fitCenter"
                                            app:srcCompat="@drawable/exlamation_mark" />
                                    </LinearLayout>
                            <RelativeLayout
                                android:layout_width="55dp"
                                android:layout_gravity="right"
                                android:layout_marginTop="5dp"
                                android:layout_height="wrap_content">
                                    <ImageButton
                                        android:id="@+id/btnChat"
                                        android:layout_width="25dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="right"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/mail_icon"
                                        android:scaleType="fitCenter"
                                        android:shadowColor="#A8A8A8"
                                        android:shadowDx="0"
                                        android:shadowDy="0"
                                        android:shadowRadius="5" />
                                    <TextView
                                        android:id="@+id/tv_message_count"
                                        android:layout_width="20dp"
                                        android:visibility="visible"
                                        android:textAlignment="gravity"
                                        android:textColor="@color/white"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/red_circle"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:layout_gravity="right"
                                        android:layout_height="20dp"
                                        android:textSize="9sp"
                                        android:text="99.." />
                                </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <!--                        <androidx.appcompat.widget.AppCompatRatingBar-->
                        <!--                            android:id="@+id/rating"-->
                        <!--                            style="@style/ImageRatingBar"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:isIndicator="false"-->
                        <!--                            android:numStars="5"-->
                        <!--                            android:transformPivotX="0dp"-->
                        <!--                            android:outlineSpotShadowColor="@color/yellow"-->
                        <!--                            android:progressTint="@color/yellow" />-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                                android:id="@+id/rating"
                                style="@style/Ratings"
                                android:layout_width="200dp"
                                android:layout_height="30dp"
                                android:numStars="5"
                                android:progressBackgroundTint="@color/yellow"
                                android:progressTint="@color/yellow" />
                                <TextView
                                    android:id="@+id/tvRatingDesc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:text="-"
                                    android:textAlignment="center"
                                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                    android:textSize="12sp"
                                    android:textStyle="bold|italic" />
                            <TextView
                                android:id="@+id/tvBobot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:text="Bobot: 99%"
                                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                android:textSize="10sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageButton
                            android:id="@+id/btnChat2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/chat_icon"
                            android:scaleType="centerCrop"
                            android:shadowColor="#A8A8A8"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/btnMore"
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/button_download_shape"
                            android:shadowColor="#A8A8A8"
                            android:shadowDx="0"
                            android:shadowDy="0"
                            android:shadowRadius="5"
                            android:text="more..."
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnKuantitatif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtPendukung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:ems="10"
                        android:hint="Pendukung"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/edtPenghambat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_marginBottom="15dp"
                        android:hint="Penghambat"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/edtCatatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:minLines="6"
                        android:gravity="top|left"
                        android:maxLines="10"
                        android:scrollbars="vertical"
                        android:hint="Catatan lain" />




                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_image_upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"/>

                    <Button
                        android:id="@+id/btnUploadImage"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="15dp"
                        android:background="@drawable/button_download_shape"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="Upload Document"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>