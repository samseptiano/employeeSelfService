<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lnKualitatif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:id="@+id/textView12"
            android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coaching dan Konseling" />

        <EditText
            android:visibility="gone"
            android:id="@+id/edtKelebihan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:hint="Kelebihan"
            android:inputType="textPersonName" />

        <EditText
            android:visibility="gone"
            android:id="@+id/edtKekurangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Kekurangan"
            android:inputType="textPersonName" />

        <EditText
            android:visibility="gone"
            android:id="@+id/edtRencanaTindaklanjut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="40dp"
            android:hint="Rencana Tindaklanjut"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmitKPI"
        android:text="Kirim KPI"
        android:textColor="#FCFCFC"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_shape"
        android:shadowColor="#A8A8A8"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnApproveKPI"
            android:text="APPROVE KPI"
            android:layout_weight="1"
            android:textColor="#FCFCFC"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvFooterTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="KPI"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold" />


</LinearLayout>