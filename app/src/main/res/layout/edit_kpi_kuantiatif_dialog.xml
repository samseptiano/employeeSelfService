<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">
    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="20dp"
        android:layout_gravity="right"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/close_dialog_bg"
        />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Edit KPI Kuantitatif" />

    <LinearLayout
        android:id="@+id/lnEditKPI"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinnerSemester"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:background="@drawable/shapetextarea"
            android:visibility="visible"
            app:ms_dropdown_height="150dp"
            app:ms_dropdown_max_height="150dp" />
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinnerCR"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shapetextarea"
            android:visibility="gone"
            app:ms_dropdown_height="150dp"
            app:ms_dropdown_max_height="150dp" />

        <EditText
            android:id="@+id/edtBobot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/shapetextarea"
            android:gravity="top|left"
            android:inputType="numberDecimal"
            android:lines="1"
            android:maxLines="10"
            android:minLines="1"
            android:padding="10dp"
            android:hint="bobot..."
            android:scrollbars="vertical"
            android:textSize="12dp"
            android:textStyle="italic" />
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="0dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:numStars="5"
                android:rating="5"
                android:isIndicator="true"
                android:layout_width="150dp"
                android:progressTint="@color/yellow"
                android:progressBackgroundTint="@color/white"
                android:layout_height="30dp"
                style="@style/Ratings" />
            <TextView
                android:id="@+id/tvKPIHintDesc5"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Excellent"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/blue"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvKPIHint5"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Excellent"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/edtHint5"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shapetextarea"
            android:inputType="textMultiLine"
            android:enabled="false"
            android:padding="10dp"
            android:textSize="12dp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:numStars="5"
                android:rating="4"
                android:isIndicator="true"
                android:layout_width="150dp"
                android:progressTint="@color/yellow"
                android:progressBackgroundTint="@color/white"
                android:layout_height="30dp"
                style="@style/Ratings" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Exceed Expectation"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/darkGreen"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvKPIHint4"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Excellent"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/edtHint4"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shapetextarea"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:enabled="false"
            android:padding="10dp"
            android:textSize="12dp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:numStars="5"
                android:rating="3"
                android:isIndicator="true"
                android:layout_width="150dp"
                android:progressTint="@color/yellow"
                android:progressBackgroundTint="@color/white"
                android:layout_height="30dp"
                style="@style/Ratings" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Meet Expectation"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/green"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvKPIHint3"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Excellent"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/edtHint3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shapetextarea"
            android:inputType="textMultiLine"
            android:enabled="false"
            android:padding="10dp"
            android:textSize="12dp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:numStars="5"
                android:rating="2"
                android:isIndicator="true"
                android:layout_width="150dp"
                android:progressTint="@color/yellow"
                android:progressBackgroundTint="@color/white"
                android:layout_height="30dp"
                style="@style/Ratings" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Below Expectation"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/yellow"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvKPIHint2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Excellent"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/edtHint2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shapetextarea"
            android:inputType="textMultiLine"
            android:enabled="false"
            android:padding="10dp"
            android:textSize="12dp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:numStars="5"
                android:rating="1"
                android:isIndicator="true"
                android:layout_width="150dp"
                android:progressTint="@color/yellow"
                android:progressBackgroundTint="@color/white"
                android:layout_height="30dp"
                style="@style/Ratings" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Unacceptable"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/red"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvKPIHint1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Excellent"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/edtHint1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shapetextarea"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:enabled="false"
            android:textSize="12dp"
            android:textStyle="italic" />

    </LinearLayout>
    </ScrollView>
    <Button
        android:layout_gravity="center"
        android:id="@+id/btnEditKPI"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shapelogin"
        android:shadowColor="@color/white"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Edit"
        android:textColor="@color/black_overlay"
        android:layout_marginBottom="15dp"
        android:textSize="14sp" />
    <Button
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/btnSaveKPI"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/shapelogin"
        android:shadowColor="@color/white"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Save KPI"
        android:textColor="@color/black_overlay"
        android:layout_marginBottom="15dp"
        android:textSize="14sp" />
</LinearLayout>