<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="100dp"
    android:layout_height="match_parent"
    tools:context=".Fragment.KPITahunanFragment.APFragment.ActivityPlanDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/ib_close"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:src="@drawable/arrow_back" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="3dp"
                android:textStyle="bold"
                android:text="Development Plan"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="10dp"
                        android:id="@+id/imgEmpPhoto"
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:background="@color/zxing_transparent"
                        android:src="@drawable/user" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_employeeName"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="start"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_marginLeft="0dp"
                                android:text="Employee Name"
                                android:textColor="#000"
                                android:textSize="14dp"
                                android:layout_width="wrap_content" />

                            <Button
                                android:id="@+id/btnSaveAP"
                                android:layout_width="60dp"
                                android:layout_weight="1"
                                android:layout_height="35dp"
                                android:layout_gravity="right"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/shapesignup"
                                android:text="Save" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_job_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="0dp"
                                android:gravity="left"
                                android:padding="3dp"
                                android:visibility="gone"
                                android:text="Job Title"
                                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                android:textSize="13sp" />
                            <TextView
                                android:id="@+id/tv_dept"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="0dp"
                                android:layout_marginEnd="30dp"
                                android:gravity="left"
                                android:padding="3dp"
                                android:text="Department"
                                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnEmpDetail"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Atasan 1          :" />
                    <TextView
                        android:id="@+id/tvAtasan1"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/black"

                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:text="Jabatan          :" />
                    <TextView
                        android:id="@+id/tvJobTitleAtasan1"
                        android:layout_weight="1"
                        android:textColor="@color/black"

                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/black"

                        android:layout_height="wrap_content"
                        android:text="Atasan 2          :" />
                    <TextView
                        android:id="@+id/tvAtasan2"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/black"

                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:text="Jabatan          :" />
                    <TextView
                        android:id="@+id/tvJobTitleAtasan2"
                        android:layout_weight="1"
                        android:textColor="@color/black"

                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:layout_margin="5dp"
                android:id="@+id/imgExpand"
                android:layout_gravity="center"
                android:layout_height="15dp"
                android:layout_width="50dp"
                android:scaleType="fitXY"
                android:background="@color/zxing_transparent"
                android:src="@drawable/expand_down" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="15dp"
                android:background="#000" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinnerImprovement"
                android:visibility="visible"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:background="@drawable/shapetextarea"
                tools:ms_dropdown_max_height="150dp"
                tools:ms_dropdown_height="150dp"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shapegreen"
                android:text="+ Add" />

            <Button
                android:id="@+id/btnDelete"
                android:background="@color/zxing_transparent"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="40dp"
                android:textStyle="normal"
                android:text="Delete" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_idp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:layout_marginBottom="0dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/lnBtnSave"
                    android:layout_below="@id/rv_idp"
                    android:background="@color/white"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnSave"
                        android:background="@drawable/shapegreen"
                        android:layout_width="wrap_content"
                        android:padding="0dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        android:text="SAVE" />
                    <Button
                        android:id="@+id/btnGotoIdp"
                        android:layout_margin="10dp"
                        android:padding="15dp"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="40dp"
                        android:background="@drawable/shapegreen"
                        android:text="GO TO IDP MENU" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>