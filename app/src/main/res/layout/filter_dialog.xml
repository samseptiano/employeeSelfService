<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ib_close"
            android:layout_width="20dp"
            android:layout_gravity="right"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/close_dialog_bg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="50dp"
            android:orientation="horizontal">
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/imageZoom"
            android:layout_height="30dp"
            android:layout_width="100dp"
            android:background="@color/zxing_transparent"
            android:scaleType="fitXY"
            android:src="@drawable/filter_black_icon" />

        </LinearLayout>

<LinearLayout
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="Tahun Penilaian"
            android:textColor="#000"
            android:textSize="20dp" />
        <Button
            android:layout_gravity="center"
            android:id="@+id/btnReset"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_modal"
            android:shadowColor="@color/white"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Reset"
            android:textColor="@color/black_overlay"
            android:layout_marginBottom="15dp"
            android:textSize="14sp" />
        <Button
            android:layout_gravity="center"
            android:id="@+id/btnOk"
            android:layout_width="90dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_modal"
            android:shadowColor="@color/white"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="OK"
            android:textColor="@color/black_overlay"
            android:layout_marginBottom="15dp"
            android:textSize="14sp" />
    </LinearLayout>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinnerTahun"
            android:visibility="visible"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:background="@drawable/shapetextarea"
            app:ms_dropdown_max_height="150dp"
            app:ms_dropdown_height="150dp"
            app:ms_dropdown_width="wrap_content"
            android:textSize="16dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="left"
                android:textStyle="bold"
                android:text="Direktorat"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>

        <mabbas007.tagsedittext.TagsEditText
            android:id="@+id/tagsDirektorat"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            TagsEditText:allowSpaceInTag="true"
            android:textColor="#000"
            android:padding="8dp"
            android:textSize="12dp"
            TagsEditText:tagsTextColor="#000"
            TagsEditText:tagsTextSize="12dp"
            android:background="@drawable/btn_modal_grey"
            TagsEditText:tagsBackground="@drawable/square_default"
            TagsEditText:tagsCloseImageRight="@drawable/close_btn"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="left"
                android:textStyle="bold"
                android:text="Site"
                android:textColor="#000"
                android:textSize="20dp" />
        </LinearLayout>
        <mabbas007.tagsedittext.TagsEditText
            android:id="@+id/tagsSite"
            android:layout_margin="15dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            TagsEditText:allowSpaceInTag="true"
            android:padding="8dp"
            android:background="@drawable/btn_modal_grey"
            TagsEditText:tagsBackground="@drawable/square_default"
            TagsEditText:tagsTextColor="#000"
            android:textSize="14dp"
            TagsEditText:tagsCloseImageRight="@drawable/close_btn" />
    </LinearLayout>
</RelativeLayout>
</ScrollView>